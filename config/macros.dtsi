/ {
    #define MACRO(NAME, BINDINGS) \
        NAME: NAME { \
            compatible = "zmk,behavior-macro"; \
            #binding-cells = <0>; \
            wait-ms = <5>; \
            tap-ms = <5>; \
            bindings = <BINDINGS>; \
        };
    
    macros {
        // Macros

        // Example usage:
        // MACRO(mc_shift,                  &sk LSHFT)
        // MACRO(mc_down,                   &macro_tap &kp DOWN)
        // MACRO(mc_complete,               &macro_tap &kp LS(LG(ENTER)))
        // SHIFTED_MACRO(mm_down,           &mc_down, &mc_complete)

        MACRO(prev_word, &macro_tap &kp LC(LEFT))
        MACRO(next_word, &macro_press &kp LCTRL \
                         &macro_tap  &kp RIGHT \
                         &macro_release &kp LCTRL)
        MACRO(prev_word_sel, &macro_press &kp LCTRL &kp LEFT_SHIFT \
                             &macro_tap  &kp LEFT \
                             &macro_release &kp LCTRL &kp LEFT_SHIFT)
        MACRO(next_word_sel, &macro_press &kp LCTRL &kp LEFT_SHIFT \
                             &macro_tap  &kp RIGHT \
                             &macro_release &kp LCTRL &kp LEFT_SHIFT)
        MACRO(arrow_func, &kp EQUAL &kp GT &macro_press)
        MACRO(emdsh, &kp SPACE &kp MINUS &kp MINUS &kp SPACE &macro_press)

        MACRO(mc_selw,  &macro_tap &kp LC(LEFT) &kp LC(RIGHT) \
                        &macro_press &kp LC(LS(LEFT)) \
                        &macro_pause_for_release \
                        &macro_release &kp LC(LS(LEFT)))
        
        MACRO(mc_seln,  &macro_tap &kp HOME &kp HOME \
                        &macro_press &kp LS(DOWN) \
                        &macro_pause_for_release \
                        &macro_release &kp LS(DOWN))
        
   };
};